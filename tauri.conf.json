{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "typst-desktop",
  "version": "1.0.0",
  "identifier": "com.lucaslrodri.typst-desktop.app",
  "build": {
    "frontendDist": "dist",
    "devUrl": "https://typst.app/"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Typst Desktop",
        "width": 1600,
        "height": 900,
        "url": "https://typst.app/",
        "resizable": true,
        "fullscreen": false,
        "x": 100,
        "y": 0
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
